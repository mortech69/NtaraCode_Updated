@page
@using NtaraCode.Pages
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">
        Ntara Football Stats</h1>
    <p>Click button to see your Football Stats</p>
</div>

<div class = "accordion" id = "ntara_acordian">
  <div class = "accordion-item">
      <div class = "accordion-header" id = "headingOne">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" 
                      data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <h2>Football Stats</h2>
              </button>
      </div>
      <div id="collapseOne" class="accordion-collapse collapse" 
            aria-labelledby="headingOne" data-bs-parent="#ntara_acordian">
        <div class="accordion-body table-responsive">
          
         <table id = "team_table" class="table table-striped table-hover nowrap width: 100%">
             <thead id = "table-head">
                 <tr>
                     <th>Name</th>
                     <th>Games</th>
                     <th>Rank</th>
                     <th>Last Win</th>
                     <th>Win Percentage</th>
                     <th>Wins</th>
                     <th>Losses</th>
                     <th>Ties</th>
                     <th>Mascot</th>
                 </tr>
             </thead>
             <tbody>
             @* async awaiter*@
             @await foreach (var team in Model.Teams)
             { 
                 <tr>
                     <td>@team.Name</td>
                     <td>@team.Games</td>
                     <td>@team.Rank</td>   
                     <td>@team.LastWin</td>
                     <td>@team.WinPercentage</td>
                     <td>@team.Wins</td>
                     <td>@team.Losses</td>
                     <td>@team.Ties</td>
                     <td>@team.Mascot</td>
                 </tr>
             } 
             </tbody>  
         </table>
       </div>
     </div>
  </div>
</div>

    
    
